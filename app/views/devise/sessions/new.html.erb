<div class="space-y-6">
  <div class="text-center">
    <h3 class="text-2xl font-semibold text-gray-900 mb-2">Iniciar Sesión</h3>
    <p class="text-gray-600 text-sm">Ingresa tus credenciales para acceder al panel</p>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), 
                html: { class: "space-y-6" }) do |f| %>
    
    <!-- Campo Email -->
    <div>
      <%= f.label :email, "Correo electrónico", 
                  class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.email_field :email, 
                        autofocus: true, 
                        autocomplete: "email",
                        placeholder: "ejemplo@dentalbolivia.com",
                        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-dental-primary focus:border-transparent transition-colors" %>
    </div>

    <!-- Campo Password -->
    <div>
      <%= f.label :password, "Contraseña", 
                  class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.password_field :password, 
                          autocomplete: "current-password",
                          placeholder: "••••••••",
                          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-dental-primary focus:border-transparent transition-colors" %>
    </div>

    <!-- Remember me -->
    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, 
                        class: "h-4 w-4 text-dental-primary focus:ring-dental-primary border-gray-300 rounded" %>
        <%= f.label :remember_me, "Recordar sesión", 
                    class: "ml-2 block text-sm text-gray-700" %>
      </div>
    <% end %>

    <!-- Botón de login -->
    <div>
      <%= f.submit "Iniciar Sesión", 
                  class: "w-full bg-dental-primary text-white py-3 px-4 rounded-lg font-medium hover:bg-sky-600 focus:ring-2 focus:ring-dental-primary focus:ring-offset-2 transition-colors" %>
    </div>
  <% end %>

  <!-- Credenciales de prueba -->
  <div class="mt-6 p-4 bg-gray-50 rounded-lg">
    <h4 class="text-sm font-medium text-gray-700 mb-2">Credenciales de prueba:</h4>
    <div class="text-xs text-gray-600 space-y-1">
      <div><strong>Admin:</strong> admin@dentalbolivia.com / password123</div>
      <div><strong>Dentista:</strong> carlos.mendoza@dentalbolivia.com / password123</div>
      <div><strong>Recepcionista:</strong> recepcion@dentalbolivia.com / password123</div>
    </div>
  </div>

  <!-- Links adicionales -->
  <div class="text-center text-sm">
    <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), 
                  class: "text-dental-primary hover:text-dental-accent" %>
    <% end %>
  </div>
</div>
