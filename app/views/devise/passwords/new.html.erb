<div class="space-y-6">
  <div class="text-center">
    <h3 class="text-2xl font-semibold text-gray-900 mb-2">Recuperar Contraseña</h3>
    <p class="text-gray-600 text-sm">Ingresa tu correo para recibir instrucciones</p>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), 
                html: { method: :post, class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Campo Email -->
    <div>
      <%= f.label :email, "Correo electrónico", 
                  class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.email_field :email, 
                        autofocus: true, 
                        autocomplete: "email",
                        placeholder: "ejemplo@dentalbolivia.com",
                        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-dental-primary focus:border-transparent transition-colors" %>
    </div>

    <!-- Botón de envío -->
    <div>
      <%= f.submit "Enviar instrucciones", 
                  class: "w-full bg-dental-primary text-white py-3 px-4 rounded-lg font-medium hover:bg-sky-600 focus:ring-2 focus:ring-dental-primary focus:ring-offset-2 transition-colors" %>
    </div>
  <% end %>

  <!-- Link de regreso -->
  <div class="text-center text-sm">
    <%= link_to "← Volver al login", new_session_path(resource_name), 
                class: "text-dental-primary hover:text-dental-accent" %>
  </div>
</div>
