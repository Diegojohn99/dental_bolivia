<%= form_with model: @appointment, class: "space-y-4" do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= f.label :patient_id, "Paciente", class: "block text-sm font-medium text-gray-700" %>
      <%= f.collection_select :patient_id, @patients, :id, :name, {}, class: "mt-1 block w-full border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= f.label :dentist_id, "Dentista", class: "block text-sm font-medium text-gray-700" %>
      <%= f.collection_select :dentist_id, @dentists, :id, :name, {}, class: "mt-1 block w-full border-gray-300 rounded-md" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= f.label :scheduled_at, "Fecha y hora", class: "block text-sm font-medium text-gray-700" %>
      <%= f.datetime_select :scheduled_at, class: "mt-1" %>
    </div>

    <div>
      <%= f.label :service_type, "Servicio", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :service_type, class: "mt-1 block w-full border-gray-300 rounded-md" %>
    </div>
  </div>

  <div>
    <%= f.label :status, "Estado", class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :status, Appointment.statuses.keys.map { |s| [s.humanize, s] }, {}, class: "mt-1 block w-full border-gray-300 rounded-md" %>
  </div>

  <div>
    <%= f.label :notes, "Notas", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :notes, rows: 3, class: "mt-1 block w-full border-gray-300 rounded-md" %>
  </div>

  <div class="flex justify-end space-x-2">
    <%= link_to "Cancelar", appointments_path, class: "px-4 py-2 border rounded-md text-gray-700" %>
    <%= f.submit "Guardar", class: "px-4 py-2 bg-dental-primary text-white rounded-md hover:bg-sky-600" %>
  </div>
<% end %>
